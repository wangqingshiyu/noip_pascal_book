program ex5_1;
var avg,sum:double;
    a:array[1..100]of real;
    i:integer;
begin
     sum:=0;
     for i:=1 to 50 do
      begin
         read(a[i]);
         sum:=sum+a[i];
      end;
     avg:= sum/50;
     for i:=1 to 50 do
         if a[i]<avg then
            writeln('No.',i,' ',a[i]:0:2);
end.
